<%= form_with(model: @secret, local: true) do |form| %>
    <div class="container mb-3 px-0">
        <%= link_to secrets_path, class:"btn btn-outline-primary align-middle mx-0" do%>
            <i data-feather="chevrons-left"></i><span >Voltar</span>
        <%end%>
    </div>
    <div class="container border px-3 py-3 bg-white rounded">
        <h1 class="mb-4">Novo Cliente</h1>
        <%= render 'form', form: form  %>
        <div class=" d-flex justify-content-center" >
            <%= form.check_box :enabled, class:"disable-switch", data: {toggle:"toggle", onstyle:"success", offstyle:"danger", on:"Ativo", off:"Inativo", width:"40%"} %>
        </div>
    </div>
    <div class="container my-3 px-0">
        <div class="row">
            <div class="offset-8 col-4">
                <%= form.submit "Validar", class:"btn btn-info btn-block" %>
            </div>
        </div>
    </div>
<% end %>
