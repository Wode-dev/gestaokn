<div class="bg-primary" style="">
    <div class="d-flex align-items-center justify-content-center" style=" min-width: 100vw; min-height: 100vh;">
        <div class="bg-300 border rounded mt-3 mb-2 px-3 py-2">
            <h2>Editar usuário</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <%= f.label "Apelido", class:"input-group-text" %>
                </div>
                <%= f.text_field :nick_name, class:"form-control" %>
            </div>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <%= f.label "Nome", class:"input-group-text" %>
                </div>
                <%= f.text_field :name, class:"form-control"  %>
            </div>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <%= f.label "Email", class:"input-group-text" %>
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
            <div class="row mb-2 mx-2 py-2 border border-dark rounded bg-500">
                <div class="col-6">
                    <p>Trocar de senha</p>
                    <% if @minimum_password_length %>
                    <em>Mínimo de caracteres:
                        <%= @minimum_password_length %></em>
                    <% end %>
                </div>
                <div class="col-6">
                    <div class="input-group mb-1">
                        <div class="input-group-prepend">
                            <%= f.label "Digite", class:"input-group-text" %>
                        </div>
                        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <%= f.label "Confirmar", class:"input-group-text" %>
                        </div>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
                    </div>
                </div>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <%= f.label "Senha Atual", class:"input-group-text" %>
                </div>
                <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
            </div>
            <span class="text-muted">Necessário para confirmar as alterações</span>
            <div class="d-flex align-items-end">
                <%= link_to "Voltar", :back, class:"btn btn-outline-primary" %>
                <div class="ml-auto"><%= f.submit "Atualizar", class:"btn btn-primary mt-3" %></div>
            </div>
            <% end %>
        </div>
    </div>
</div>