<%= form_with(model: @record, local: true) do |form| %>
<div class="container px-0 mb-3">
    <h1 class="font-weight-light">Marcar Instalação</h1>
    <%= link_to 'Voltar', records_path, class:"btn btn-warning" %>
</div>
<div class="container border border-dark bg-white rounded py-3">
    
    <%= render 'form', form: form %>

</div>
<div class="container mt-3 px-0">
    <div class="d-flex">
        <%= form.submit "Registrar", class:"btn btn-success ml-auto" %>
    </div>
</div>
<% end %>