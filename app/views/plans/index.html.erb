<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Planos</h1>

  <%= link_to 'Novo Plano', new_plan_path, class:"btn btn-outline-dark create-action-button-alignment" %>
  <table class="table table-sm table-hover table-striped">
    <thead>
      <tr>
        <th>Id MikroTik</th>
        <th>Nome do Plano</th>
        <th>Pre√ßo</th>
        <th>Taxa</th>
        <th>Clientes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @plans.each do |plan| %>
        <tr>
          <td><%= plan.mk_id%></td>
          <td><%= plan.profile_name %></td>
          <td><%= plan.value %></td>
          <td><%= plan.rate_limit %></td>
          <td><%= Secret.where(plan_id: plan.id).count %></td>
          <td><%= link_to '<i data-feather="file-text"></i>'.html_safe, plan %></td>
          <td><%= link_to '<i data-feather="edit"></i>'.html_safe, edit_plan_path(plan) %></td>
          <td><%= link_to '<i data-feather="trash-2"></i>'.html_safe, plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>