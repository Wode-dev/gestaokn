<div class="container px-0">
    <h2 class="display-4">Administração</h2>
</div>
<div class="container bg-white border rounded border-dark">
    <table class="table">
        <tbody>
            <% User.all.each do |user|%>
            <tr id="<%= user.id %>">
                <td class="name">
                    <%= user.name %>
                </td>
                <td class="nick_name">
                    <%= user.nick_name %>
                </td>
                <td class="email">
                    <%= user.email %>
                </td>
                <td class="last_sign_in_at">
                    <%= user.last_sign_in_at %>
                </td>
                <td>
                    <button id="<%= user.id %>" type="button" class="btn btn-warning" data-toggle="modal" data-target="#viewUserModal">
                        <i data-feather="edit"></i>
                    </button>
                    <%= link_to root_path, class:"btn btn-danger" do %>
                        <i data-feather="trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<!-- Modal de visualizar o usuário -->
<div class="modal fade" id="viewUserModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <%= form_tag user_registration_path, method: :put do %>
            <div class="modal-header">
                <h5 class="modal-title">Editar <span id="userName"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <%= hidden_field :id, 0 %>
                    <%= text_field :name, "", class:"form-control" %>
                    <%= text_field :nick_name, "", class:"form-control" %>
                    <%= text_field :email, "", class:"form-control" %>
                    <%= text_field :password, "", class:"form-control" %>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <%= submit_tag "Salvar", class:"btn btn-primary" %>
                </div>
            </div>
            <% end %>
    </div>
</div>