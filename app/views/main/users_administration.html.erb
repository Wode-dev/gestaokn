<div class="container px-0 mb-2">
    <h2 class="display-4">Administração</h2>
    <div class="d-flex">
        <button type="button" class="btn btn-outline-secondary ml-auto" data-toggle="modal" data-target="#addUserModal">
            Adicionar novo usuário
        </button>
    </div>
</div>
<div class="container bg-white border rounded border-dark">
    <table class="table">
        <tbody>
            <% User.all.each do |user|%>
            <tr id="<%= user.id %>">
                <td class="name">
                    <%= user.name %>
                </td>
                <td class="nick_name">
                    <%= user.nick_name %>
                </td>
                <td class="email">
                    <%= user.email %>
                </td>
                <td class="last_sign_in_at">
                    <%= user.last_sign_in_at %>
                </td>
                <td>
                    <button id="<%= user.id %>" type="button" class="btn btn-warning showUserModalButton" data-toggle="modal"
                        data-target="#viewUserModal">
                        <i data-feather="edit"></i>
                    </button>
                    <%= link_to root_path, class:"btn btn-danger" do %>
                    <i data-feather="trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<!-- Modal de visualizar o usuário -->
<div class="modal fade" id="viewUserModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <%= form_tag save_users_administration_path, method: :put do %>
            <div class="modal-header">
                <h5 class="modal-title">Editar <span id="userName"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body edit-users">
                <%= hidden_field_tag :manager_id, current_user.id %>
                <%= hidden_field_tag :id, 0 %>
                Nome<br>
                <%= text_field_tag :name, "", class:"form-control" %>
                Apelido <br>
                <%= text_field_tag :nick_name, "", class:"form-control" %>
                Email <br>
                <%= text_field_tag :email, "", class:"form-control" %>
                Senha <br>
                <%= text_field_tag :password, "", class:"form-control" %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= submit_tag "Salvar", class:"btn btn-primary" %>
            </div>
        </div>
        <% end %>
    </div>
</div>

<!-- Modal de Adicionar o usuário -->
<div class="modal fade" id="addUserModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <%= form_tag save_users_administration_path do %>
            <%= hidden_field_tag :manager_id, current_user.id %>
            <div class="modal-header">
                <h5 class="modal-title">Editar <span id="userName"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Nome<br>
                <%= text_field_tag :name,'', class:"form-control" %>
                Apelido <br>
                <%= text_field_tag :nick_name,'', class:"form-control" %>
                Email <br>
                <%= text_field_tag :email,'', class:"form-control" %>
                Senha <br>
                <%= text_field_tag :password,'', class:"form-control" %>
                Senha <br>
                <%= text_field_tag :password_confirmation,'', class:"form-control" %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= submit_tag "Salvar", class:"btn btn-primary" %>
            </div>
        </div>
        <% end %>
    </div>
</div>