<div class="container px-0">
    <h2 class="display-4">Administração</h2>
</div>
<div class="container bg-white border rounded border-dark">
    <table class="table">
        <tbody>
            <% User.all.each do |user|%>
            <tr>
                <th><%= user.name %></th>
                <td><%= user.nick_name %></td>
                <td><%= user.email %></td>
                <td><%= user.last_sign_in_at %></td>
                <td>
                    <%= link_to root_path, class:"btn btn-success" do %>
                        <i data-feather="eye"></i>
                    <% end %>
                    <%= link_to root_path, class:"btn btn-warning" do %>
                        <i data-feather="edit"></i>
                    <% end %>
                    <%= link_to root_path, class:"btn btn-danger" do %>
                        <i data-feather="trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>